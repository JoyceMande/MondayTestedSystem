@model SCRIPTERS.Models.RegisterViewModel
@{
    ViewBag.Title = "RegisterRole";
}


@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-offset-2">
            <div class="col-md-10">
                <div class="form-horizontal">
                    <h4>Assign </h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                 
                   
                    
                    <div class="form-group">
                        @Html.Label("Select User", new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownList("UserName" , "Select")
                         
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Select Role", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownList("Name" , "Select")
                        </div>
                    </div>

                    
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" value="Assign Role" class="btn btn-success" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Go Back", "Index", "Roles")
</div>